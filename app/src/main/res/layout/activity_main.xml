<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="420dp"
        android:layout_height="509dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="139dp"
            android:layout_height="114dp"
            android:onClick="i1"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="131dp"
            android:layout_height="116dp"
            android:onClick="i1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="131dp"
            android:layout_height="116dp"
            android:onClick="i1"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="139dp"
            android:layout_height="114dp"
            android:onClick="i1"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="131dp"
            android:layout_height="116dp"
            android:onClick="i1"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="131dp"
            android:layout_height="116dp"
            android:onClick="i1"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="139dp"
            android:layout_height="114dp"
            android:onClick="i1"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="131dp"
            android:layout_height="116dp"
            android:onClick="i1"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="131dp"
            android:layout_height="116dp"
            android:onClick="i1"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="139dp"
            android:layout_height="114dp"
            android:onClick="i1"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="131dp"
            android:layout_height="116dp"
            android:onClick="i1"
            app:layout_column="1"
            app:layout_row="3"
            app:srcCompat="@drawable/dcat2" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="131dp"
            android:layout_height="116dp"
            android:onClick="i1"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/dcat2" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/t3"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="Time : 15"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/scoreT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|right"
        android:text="Score : 0"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="225dp"
        android:layout_height="26dp"
        android:layout_marginBottom="45dp"
        android:gravity="center"
        android:text="try to catch the cat "
        android:textColor="#E8DFDF"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreT" />

</androidx.constraintlayout.widget.ConstraintLayout>